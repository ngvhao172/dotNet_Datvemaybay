<script>
    $(document).ready(function() {
        if("@Model"!=null){
             $("#show-ticket").show();
        }
        else{
              $("#show-ticket").hide();
        }

        var lastSelectedItem = sessionStorage.getItem("selectedOption");

        var lastInputValue = sessionStorage.getItem("inputValue");

        if (lastInputValue != null) {
            $("#typeOfCode").val(lastInputValue);
        }

        if (lastSelectedItem === "1" || lastSelectedItem === "2") {
            $('#selectionType').val(lastSelectedItem);
            handleSelectionChange($('#selectionType').val());
        }


        function handleSelectionChange(selectedOption) {
            var label = $('#inputLabel');
            if (selectedOption === "1") {
                label.text("Mã vé (Gồm 14 kí tự)");
                $("#typeOfCode").attr("name", "ticketId");
            } else if (selectedOption === "2") {
                label.text("Mã đặt chỗ (Gồm 10 kí tự)");
                $("#typeOfCode").attr("name", "bookingId");
            }
            sessionStorage.setItem("selectedOption", selectedOption);
        }


        $("#toggle").click(function (e) {
            sessionStorage.setItem("inputValue", $("#typeOfCode").val());
        })

        $('#selectionType').change(function () {
            var selectedOption = $(this).val();
            handleSelectionChange(selectedOption);
        });



    });
</script>
